generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String   @id @default(cuid())
  email    String   @unique
  password String
  team     Team?
}

model Team {
  id      String   @id @default(cuid())
  name    String
  budget  Float
  user    User     @relation(fields: [userId], references: [id])
  userId  String   @unique
  players Player[]
}

model Player {
  id          String  @id @default(cuid())
  name        String
  position    String
  price       Float
  isListed    Boolean @default(false)
  askingPrice Float?
  team        Team    @relation(fields: [teamId], references: [id])
  teamId      String
}